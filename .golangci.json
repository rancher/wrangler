{
    "linters": {
        "disable-all": true,
        "enable": [
            "ineffassign",
            "goimports",
            "govet",
            "misspell",
            "revive",
            "unused"
        ]
    },
    "linters-settings": {
        "govet": {
            "disable": [
                "shadow"
            ]
        },
        "revive": {
            "rules": [
                {
                    "name": "confusing-naming",
                    "disabled": true
                }
            ]
        }
    },
    "run": {
        "tests": false,
        "timeout": "10m"
    },
    "issues": {
        "exclude-dirs": [
            "pkg/generated"
        ]
    }
}